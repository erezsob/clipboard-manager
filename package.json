	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@tailwindcss/vite": "^4.1.18",
		"@types/better-sqlite3": "^7.6.12",
		"@types/node": "^25.0.3",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"autoprefixer": "^10.4.23",
		"concurrently": "^9.1.2",
		"electron": "^39.2.7",
		"electron-builder": "^25.1.8",
		"knip": "^5.79.0",
