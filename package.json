{
	"name": "mac-clipboard-manager",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"main": "electron/main.ts",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"electron": "pnpm electron:compile:preload && pnpm electron:compile && pnpm electron:copy:migrations && electron electron-dist/main.js",
		"electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && pnpm electron:compile:preload && pnpm electron:compile && pnpm electron:copy:migrations && NODE_ENV=development electron electron-dist/main.js\"",
		"electron:compile:preload": "tsc -p electron/tsconfig.preload.json",
		"electron:compile": "tsc -p tsconfig.electron.json",
		"electron:copy:migrations": "cp -r electron/migrations electron-dist/migrations",
		"electron:build": "tsc -p tsconfig.electron.json && pnpm electron:copy:migrations && vite build && electron-builder",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"format": "biome format --write",
		"types:check": "tsc --noEmit && tsc -p tsconfig.electron.json --noEmit",
		"knip": "knip",
		"prepare": "husky"
	},
	"dependencies": {
		"better-sqlite3": "^12.5.0",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.562.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@electron/rebuild": "^4.0.2",
		"@tailwindcss/vite": "^4.1.18",
		"@types/better-sqlite3": "^7.6.12",
		"@types/node": "^25.0.3",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"autoprefixer": "^10.4.23",
		"concurrently": "^9.1.2",
		"electron": "^39.2.7",
		"electron-builder": "^25.1.8",
		"husky": "^9.1.7",
		"knip": "^5.79.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"typescript": "~5.8.3",
		"vite": "^7.0.4",
		"wait-on": "^8.0.1"
	}
}
