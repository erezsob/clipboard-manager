{
	"name": "mac-clipboard-manager",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"main": "electron/main.js",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
